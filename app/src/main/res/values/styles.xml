<resources>

    <!-- Base application theme. -->
    <style name="QiipTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">8dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="NoElevationToolbar" parent="Toolbar">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="QiipTagGroup" parent="TagGroup.Small">
        <item name="atg_textColor">#999999</item>
        <item name="atg_borderColor">#999999</item>
        <item name="atg_horizontalSpacing">1dp</item>
        <item name="atg_backgroundColor">#ffffff</item>
        <item name="atg_pressedBackgroundColor">#ffffff</item>
        <item name="atg_textSize">8dp</item>
    </style>

</resources>
