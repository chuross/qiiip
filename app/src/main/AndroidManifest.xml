<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.chuross.chuross.qiiip">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.github.chuross.qiiip.application.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/QiipTheme">

        <activity
            android:name="com.github.chuross.qiiip.ui.activity.ScreenActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.github.chuross.qiiip.ui.activity.LoginActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="qiiip"
                    android:host="oauth"
                    android:path="/authorize" />
            </intent-filter>
        </activity>

    </application>

</manifest>
